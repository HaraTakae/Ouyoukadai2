<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
        <!-- フォロー機能 -->
        <td>フォロー<%= user.followings.count %></td>
        <td>フォロワー<%= user.followers.count %></td>
        <!-- フォローボタンのrender -->
        <td><%= render partial: "relationships/follow_btn", locals: { user: current_user } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
